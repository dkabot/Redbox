<UserControl
    x:Class="Redbox.Rental.UI.Controls.JoinedUserControl2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Redbox="clr-namespace:Redbox.Controls;assembly=Redbox.Controls"
    xmlns:localbase="clr-namespace:Redbox.Rental.UI">
    <Grid>
        <UIElement.InputBindings>
            <MouseBinding
                Gesture="LeftClick"
                Command="{x:Static localbase:Commands.GeneralClickCommand}" />
        </UIElement.InputBindings>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="574" />
            <RowDefinition
                Height="194" />
        </Grid.RowDefinitions>
        <Image
            x:Name="PinkDotsBackgroundImage"
            Grid.Row="0"
            Grid.RowSpan="2"
            Source="pack://Application:,,,/Redbox.Rental.UI;component/Assets/Images/backgroundTexture.png" />
        <Grid
            Row="0">
            <StackPanel
                Margin="0,52,0,0">
                <TextBlock
                    Text="Join Redbox Perk"
                    Style="{StaticResource font_museo_slab_900_64}"
                    Foreground="#782d8d"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" />
                <TextBlock
                    Text="at checkout"
                    Style="{StaticResource font_museo_slab_900_64}"
                    Foreground="#782d8d"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" />
                <StackPanel
                    Margin="0,84,0,0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
                    <StackPanel
                        Margin="0,0,171.5,0">
                        <Grid
                            HorizontalAlignment="Center">
                            <Ellipse
                                Name="OuterCircle"
                                Stroke="#782d8d"
                                StrokeThickness="6"
                                Width="114"
                                Height="120">
                                <UIElement.Clip>
                                    <GeometryGroup
                                        FillRule="Nonzero">
                                        <RectangleGeometry
                                            Rect="0,0,120,70" />
                                        <RectangleGeometry
                                            Rect="0,0,70,120" />
                                    </GeometryGroup>
                                </UIElement.Clip>
                            </Ellipse>
                            <Ellipse
                                Name="InnerCircle"
                                Stroke="#782d8d"
                                StrokeThickness="6"
                                Width="30"
                                Height="30"
                                Margin="40,40" />
                            <Path
                                Name="OuterPath"
                                Stroke="#782d8d"
                                StrokeThickness="6"
                                Margin="21,21,0,0">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure
                                            StartPoint="0,32">
                                            <ArcSegment
                                                IsLargeArc="False"
                                                Size="32,32"
                                                SweepDirection="Clockwise"
                                                Point="32,0" />
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                            <Path
                                Name="InnerPath"
                                Stroke="#782d8d"
                                StrokeThickness="6"
                                Margin="30,30,0,0">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure
                                            StartPoint="0,23">
                                            <ArcSegment
                                                IsLargeArc="False"
                                                Size="23,23"
                                                SweepDirection="Clockwise"
                                                Point="23,0" />
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                        </Grid>
                        <StackPanel
                            Margin="0,18,0,0">
                            <TextBlock
                                Text="Earn a free"
                                Style="{StaticResource font_montserrat_bold_24}"
                                Foreground="#782d8d"
                                HorizontalAlignment="Center" />
                            <TextBlock
                                Text="DVD Rental"
                                Style="{StaticResource font_montserrat_bold_24}"
                                Foreground="#782d8d"
                                HorizontalAlignment="Center" />
                        </StackPanel>
                    </StackPanel>
                    <StackPanel
                        Margin="0,0,171.5,0">
                        <Grid
                            HorizontalAlignment="Center">
                            <Ellipse
                                Stroke="#782d8d"
                                StrokeThickness="6"
                                Width="114"
                                Height="120">
                                <UIElement.Clip>
                                    <GeometryGroup
                                        FillRule="Nonzero">
                                        <RectangleGeometry
                                            Rect="0,0,120,70" />
                                        <RectangleGeometry
                                            Rect="0,0,70,120" />
                                    </GeometryGroup>
                                </UIElement.Clip>
                            </Ellipse>
                            <Ellipse
                                Stroke="#782d8d"
                                StrokeThickness="6"
                                Width="30"
                                Height="30"
                                Margin="40,40" />
                            <Path
                                Stroke="#782d8d"
                                StrokeThickness="6"
                                Margin="21,21,0,0">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure
                                            StartPoint="0,32">
                                            <ArcSegment
                                                IsLargeArc="False"
                                                Size="32,32"
                                                SweepDirection="Clockwise"
                                                Point="32,0" />
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                            <Path
                                Stroke="#782d8d"
                                StrokeThickness="6"
                                Margin="30,30,0,0">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure
                                            StartPoint="0,23">
                                            <ArcSegment
                                                IsLargeArc="False"
                                                Size="23,23"
                                                SweepDirection="Clockwise"
                                                Point="23,0" />
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                        </Grid>
                        <StackPanel
                            Margin="0,18,0,0">
                            <TextBlock
                                Text="Snag additional"
                                Style="{StaticResource font_montserrat_bold_24}"
                                Foreground="#782d8d"
                                HorizontalAlignment="Center" />
                            <TextBlock
                                Text="promos"
                                Style="{StaticResource font_montserrat_bold_24}"
                                Foreground="#782d8d"
                                HorizontalAlignment="Center" />
                        </StackPanel>
                    </StackPanel>
                    <StackPanel>
                        <Grid
                            HorizontalAlignment="Center">
                            <Ellipse
                                Stroke="#782d8d"
                                StrokeThickness="6"
                                Width="114"
                                Height="120">
                                <UIElement.Clip>
                                    <GeometryGroup
                                        FillRule="Nonzero">
                                        <RectangleGeometry
                                            Rect="0,0,120,70" />
                                        <RectangleGeometry
                                            Rect="0,0,70,120" />
                                    </GeometryGroup>
                                </UIElement.Clip>
                            </Ellipse>
                            <Ellipse
                                Stroke="#782d8d"
                                StrokeThickness="6"
                                Width="30"
                                Height="30"
                                Margin="40,40" />
                            <Path
                                Stroke="#782d8d"
                                StrokeThickness="6"
                                Margin="21,21,0,0">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure
                                            StartPoint="0,32">
                                            <ArcSegment
                                                IsLargeArc="False"
                                                Size="32,32"
                                                SweepDirection="Clockwise"
                                                Point="32,0" />
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                            <Path
                                Stroke="#782d8d"
                                StrokeThickness="6"
                                Margin="30,30,0,0">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure
                                            StartPoint="0,23">
                                            <ArcSegment
                                                IsLargeArc="False"
                                                Size="23,23"
                                                SweepDirection="Clockwise"
                                                Point="23,0" />
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                        </Grid>
                        <StackPanel
                            Margin="0,18,0,0">
                            <TextBlock
                                Text="Get a surprise"
                                Style="{StaticResource font_montserrat_bold_24}"
                                Foreground="#782d8d"
                                HorizontalAlignment="Center" />
                            <TextBlock
                                Text="b-day gift"
                                Style="{StaticResource font_montserrat_bold_24}"
                                Foreground="#782d8d"
                                HorizontalAlignment="Center" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>
        <DockPanel
            Background="#782d8d"
            Grid.Row="1">
            <Image
                x:Name="hand"
                DockPanel.Dock="Left"
                Source="pack://Application:,,,/Redbox.Rental.UI;component/Assets/Images/page-1.png"
                Margin="55,22,0,16" />
            <TextBlock
                DockPanel.Dock="Left"
                Text="Touch anywhere to start"
                Style="{StaticResource font_museo_slab_900_30}"
                Margin="34,80,0,78"
                Foreground="{Binding LowerTextColor, FallbackValue=White}" />
            <StackPanel
                Orientation="Horizontal"
                DockPanel.Dock="Right"
                HorizontalAlignment="Right"
                Margin="0,87,30,41">
                <Grid
                    x:Name="handicap_button_on"
                    Margin="12,0,0,0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Visibility="{Binding Path=AdaTurnedOnLabelVisibility}">
                    <UIElement.InputBindings>
                        <MouseBinding
                            Gesture="LeftClick"
                            Command="{x:Static localbase:Commands.ToggleADAModeCommand}" />
                    </UIElement.InputBindings>
                    <Ellipse
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Width="62"
                        Height="62"
                        Fill="#E42045" />
                    <Ellipse
                        HorizontalAlignment="Left"
                        Margin="3,3,1,1"
                        VerticalAlignment="Top"
                        Width="58"
                        Height="58"
                        Fill="#E42045" />
                    <UserControl
                        x:Name="handicap_button_icon_on"
                        Foreground="#FFFFFFFF"
                        Style="{StaticResource handicap_icon}"
                        Margin="-2, 4, 0,0"
                        Width="67"
                        Height="67"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        RenderTransformOrigin="0.5,0.5">
                        <UIElement.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform
                                    ScaleX="0.75"
                                    ScaleY="0.75" />
                                <SkewTransform />
                                <RotateTransform />
                                <TranslateTransform />
                            </TransformGroup>
                        </UIElement.RenderTransform>
                    </UserControl>
                </Grid>
                <Redbox:RoundedButton
                    x:Name="espanol_button"
                    Style="{StaticResource rubine_no_border_button_style}"
                    CornerRadius="31"
                    Margin="12,0,0,0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Width="148"
                    Height="62"
                    Command="{x:Static localbase:Commands.ToggleLanguageModeCommand}"
                    Focusable="False">
                    <TextBlock
                        VerticalAlignment="Center"
                        Style="{StaticResource font_bryant_bold_18}"
                        Text="ESPAÃ‘OL" />
                </Redbox:RoundedButton>
                <Redbox:RoundedButton
                    x:Name="help_button"
                    Style="{StaticResource rubine_no_border_button_style}"
                    CornerRadius="31"
                    Margin="12,0,0,0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Width="62"
                    Height="62"
                    Command="{x:Static localbase:Commands.HelpCommand}"
                    Focusable="False">
                    <TextBlock
                        Style="{StaticResource font_bryant_bold_28}">
                        ?
                    </TextBlock>
                </Redbox:RoundedButton>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>